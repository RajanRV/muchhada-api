{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "preview_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "gallery": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "publish": {
      "type": "boolean",
      "default": false
    },
    "categories": {
      "collection": "category",
      "via": "products",
      "dominant": true
    },
    "sku": {
      "type": "string"
    },
    "product_variations": {
      "collection": "product-variation",
      "via": "product"
    },
    "stock": {
      "type": "boolean"
    },
    "price": {
      "type": "decimal"
    },
    "sale_price": {
      "type": "decimal"
    },
    "sale": {
      "type": "boolean"
    }
  }
}
